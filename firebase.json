{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "host": "localhost",
      "port": 4001
    },
    "firestore": {
      "host": "localhost",
      "port": 4102
    },
    "hosting": {
      "host": "localhost",
      "port": 5000
    }
  }

}
